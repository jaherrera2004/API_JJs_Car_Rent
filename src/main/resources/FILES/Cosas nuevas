ALTER TABLE tbl_vehiculos ADD COLUMN foto VARCHAR(50);

DELIMITER //
CREATE PROCEDURE agregar_foto_vehiculo(IN p_foto VARCHAR(80), IN p_placa VARCHAR(10))
BEGIN
   UPDATE tbl_vehiculos SET foto = p_foto WHERE placa=p_placa;
END //


DELIMITER ;

INSERT INTO tbl_permisos (permiso, descripcion) VALUES ('vehiculo:obtener-lista-fotos','Permiso para obtener la lista de vehiculos con su foto');

INSERT INTO tbl_rol_detalles(id_permiso, id_rol) VALUES
((SELECT id FROM tbl_permisos WHERE permiso='vehiculo:obtener-lista-fotos'),1);

